import java.util.Scanner;
public class Hourglass {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter the number of rows: ");
        int n = scanner.nextInt();
        for(int i=n; i>=1; i--) {
            for(int j=1; j<=(n-i); j++) {
                System.out.print(" ");
            }
            for(int k=1; k<=i; k++) {
                System.out.print(k);
            }
            for(int l=(i-1); l>=1; l--) {
                System.out.print(l);
            }
            System.out.println();
        }
        for(int o=2; i<=n; i++) {
            for(int j=1; j<=(n-0); j++) {
                System.out.print(" ");
            }
            for(int k=1; k<=o; k++) {
                System.out.print(k);
            }
            for(int l=(o-1); l>=1; l--) {
                System.out.print(l);
            }
            System.out.println();
        }
    }
}