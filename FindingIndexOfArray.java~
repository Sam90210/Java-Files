         int[] nig = new int[no];
         
          System.out.println("Enter numbers in the indexes:");
          for(int i=0; i<nig.length; i++){
              nig[i] = sc.nextInt();
          }
          System.out.println("Enter the number you want to search:");
          int search = sc.nextInt();
          boolean flag = false;
